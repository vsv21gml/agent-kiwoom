# Root environment example
# Copy to .env and adjust values for your local machine.

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# Backend
PORT=4000
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_kiwoom
DB_USER=agent
DB_PASSWORD=agent
DB_SSL=false
DB_SSL_IGNORE=false
SSL=false
SSL_IGNORE=false

VIRTUAL_TRADING_MODE=true
INITIAL_CAPITAL=1000000
WATCH_SYMBOLS=005930,000660,035420

MARKET_POLL_CRON=*/10 * * * *
MARKET_TIMEZONE=Asia/Seoul
MARKET_OPEN_HHMM=0900
MARKET_CLOSE_HHMM=1530
NEWS_SCRAPE_CRON=0 * * * *

KIWOOM_BASE_URL=https://api.kiwoom.com
KIWOOM_WS_URL=wss://api.kiwoom.com:10000/api/dostk/websocket
KIWOOM_REALTIME_TTL_MS=15000
KIWOOM_ACCESS_TOKEN= # optional: auto-issued via /oauth2/token when empty
KIWOOM_APP_KEY=
KIWOOM_APP_SECRET=
KIWOOM_MOCK=true

GEMINI_API_KEY=
