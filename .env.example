NEWS_FEEDS=https://feeds.reuters.com/reuters/businessNews,https://www.investing.com/rss/news_25.rss
STRATEGY_FILE_PATH=data/INVESTMENT_STRATEGY.md
UNIVERSE_FILE_PATH=data/universe.csv
UNIVERSE_SOURCE_URL=
UNIVERSE_SOURCE_FORMAT=csv
UNIVERSE_SOURCE_SYMBOL_FIELD=symbol
UNIVERSE_SOURCE_MARKET_CAP_FIELD=marketcap
UNIVERSE_SOURCE_NAME_FIELD=name
UNIVERSE_REFRESH_CRON=0 6 * * *
UNIVERSE_TOP_MARKET_CAP=200
